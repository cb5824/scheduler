          <% if @request.mon == 1 %>
            <div class="status_text <%= @request.daystatus(@request.approval.group_1_mon, @request.approval.group_2_mon, @request.approval.group_3_mon, @request.approval.group_4_mon) %>"><%= @request.daystatus(@request.approval.group_1_mon, @request.approval.group_2_mon, @request.approval.group_3_mon, @request.approval.group_4_mon).capitalize %></div>
