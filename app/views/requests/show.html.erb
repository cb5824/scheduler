<div class="<%= @request.color %>">
<h1 class="<%= @request.color %>"><%= @request.title %></h1>
<h3 class="<%= @request.color %>">  Week <%= @request.week %>, <%= @request.year %></h3>
</div>
<div class="margin_wrapper"
  <%= link_to 'Edit Request', edit_request_path(@request), class: "fakebutton" %>
  <%= link_to 'Copy Request', new_request_path(:copyfrom => @request.id), class: "fakebutton" %>
  <a href="#" class="fakebutton">Cancel Days</a>
  <br>

  <% @request.attachments.each do |attachment| %>
  <div class="level">
    <%= link_to attachment.filename, rails_blob_path(attachment, only_path: true) %>
  </div>
  <% end %>

