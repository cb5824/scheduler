<ul>
  <li>Name: <%= @user.name %></li>
  <li>Email: <%= @user.email %></li>
  <li>Phone #: <%= @user.phone %></li>
  <li>Company: <%= @user.company %></li>
  <li>Role: <%= @user.role %></li>

</ul>

<form action="/registrations/<%= @user.id %>" method="post">
  <input name="_method" type="hidden" value="patch" />
  <select name="updates[new_role]">
    <% if (current_user).role == "superadmin" %>
      <%= options_for_select([['Admin', 'admin'], ['User', 'user'], ['Investigator', 'investigator'], ['Superadmin', 'superadmin']]) %>
    <% else %>
      <%= options_for_select([['Admin', 'admin'], ['User', 'user'], ['Investigator', 'investigator']]) %>
    <% end %>
  </select>
  <input name="commit" type="submit" value="Update Role" />
</form>
